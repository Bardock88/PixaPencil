<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@+id/fragmentFilters_rootLayout"
android:layout_width="105dp"
android:layout_height="wrap_content"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintStart_toStartOf="parent"
xmlns:android="http://schemas.android.com/apk/res/android"
android:background="@color/white"
xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:id="@+id/activityCanvas_canvasToolsScrollView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/fragmentFilters_colorFilterButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="30dp"
                android:textAlignment="center"
                android:textColor="@android:color/holo_blue_dark"
                app:icon="@drawable/ic_baseline_color_lens_24"
                style="@style/fragmentFilters_button_style"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/fragmentFilters_lightenButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="30dp"
                android:textColor="@android:color/holo_blue_dark"
                app:icon="@drawable/ic_baseline_wb_sunny_24"
                style="@style/fragmentFilters_button_style"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/fragmentFilters_darkenButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="30dp"
                android:textColor="@android:color/holo_blue_dark"
                app:icon="@drawable/darken_icon"
                style="@style/fragmentFilters_button_style"/>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/fragmentFilters_invertButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="30dp"
                android:textColor="@android:color/holo_blue_dark"
                app:icon="@drawable/ic_baseline_invert_colors_24"
                style="@style/fragmentFilters_button_style"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/fragmentFilters_grayScaleButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@android:color/holo_blue_dark"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                android:paddingLeft="1dp"
                android:paddingRight="1dp"
                android:text="Grayscale"
                style="@style/fragmentFilters_button_style"/>
        </LinearLayout>
    </ScrollView>
    <HorizontalScrollView
        android:id="@+id/activityCanvas_canvasToolsScrollView_h"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/fragmentFilters_colorFilterButton_h"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/fragmentFilters_color_filter_str"
                android:layout_marginStart="16dp"
                android:textColor="@android:color/holo_blue_dark"
                app:icon="@drawable/ic_baseline_color_lens_24"
                style="@style/fragmentFilters_button_style"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/fragmentFilters_lightenButton_h"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/fragmentFilters_lighten_str"
                android:textColor="@android:color/holo_blue_dark"
                app:icon="@drawable/ic_baseline_wb_sunny_24"
                style="@style/fragmentFilters_button_style"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/fragmentFilters_darkenButton_h"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/fragmentFilters_darken_str"
                android:textColor="@android:color/holo_blue_dark"
                app:icon="@drawable/darken_icon"
                style="@style/fragmentFilters_button_style"/>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/fragmentFilters_invertButton_h"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/fragmentFilters_invert_str"
                android:textColor="@android:color/holo_blue_dark"
                app:icon="@drawable/ic_baseline_invert_colors_24"
                android:layout_marginEnd="16dp"
                style="@style/fragmentFilters_button_style"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/fragmentFilters_grayScaleButton_h"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/fragmentFilters_grayscale_str"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_marginEnd="16dp"
                style="@style/fragmentFilters_button_style"/>
        </LinearLayout>
    </HorizontalScrollView>
</FrameLayout>