<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="fab_3_rounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">25%</item>
    </style>

    <style name="default_extended_fab_style" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingStart">20dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:tint">@color/white</item>
        <item name="tint">@null</item>
        <item name="shapeAppearanceOverlay">@style/fab_3_rounded</item>
        <item name="android:backgroundTint">@android:color/holo_blue_light</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="main_activity_title_style" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:text">@string/title_str</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="main_activity_subtitle_style" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:text">@string/subtitle_str</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MaterialAlertDialog.App.Title.Text" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:fontFamily">@font/manrope_medium</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@android:color/holo_blue_dark</item>
    </style>

    <style name="canvas_activity_button_tool_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:clickable">true</item>
        <item name="android:elevation">0dp</item>
        <item name="elevation">0dp</item>
        <item name="borderWidth">3dp</item>
        <item name="tint">@android:color/holo_blue_dark</item>
        <item name="rippleColor">@android:color/holo_blue_light</item>
    </style>

    <style name="default_large_fab_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fabCustomSize">80dp</item>
        <item name="android:backgroundTint">#eaddff</item>
        <item name="tint">@color/black</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginBottom">24dp</item>
    </style>

    <style name="default_large_fab_style_activity_main" parent="default_large_fab_style">
        <item name="android:src">@drawable/ic_baseline_add_24</item>
    </style>

    <style name="default_large_fab_style_activity_canvas" parent="default_large_fab_style">
        <item name="android:src">@drawable/ic_baseline_check_24</item>
    </style>

    <style name="default_canvas_creation_edit_text_style_activity_canvas">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:autofillHints">name</item>
        <item name="android:background">@null</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:hint">@string/name_str</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="recent_creations_layout_card_view_style">
        <item name="android:layout_margin">5dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="cornerRadius">5dp</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPadding">16dp</item>
    </style>

    <style name="recent_creations_image_button_style">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:src">@drawable/ic_baseline_star_border_24</item>
        <item name="iconGravity">start</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="recent_creations_text_view_style">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:fontFamily">@font/manrope_light</item>
        <item name="android:text">TextView</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="recent_creations_text_view_style2" parent="recent_creations_text_view_style">
        <item name="android:fontFamily">@font/manrope_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
    </style>
</resources>