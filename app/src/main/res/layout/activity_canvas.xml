<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootLayout"
    tools:context=".activities.canvas.CanvasActivity">

    <FrameLayout
        android:id="@+id/colorPickerFragmentHost"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <com.realtomjoney.pyxlmoose.customviews.SquareFrameLayout
        android:id="@+id/fragmentHost"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/border_drawable_frame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view">

    </com.realtomjoney.pyxlmoose.customviews.SquareFrameLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/fragmentHost"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentHost"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/doneButton"
        style="@style/default_large_fab_style_activity_canvas"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/content_description_save_creation"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/colorSwapButton"
        style="@style/canvas_activity_button_tool_style"
        android:layout_marginEnd="16dp"
        app:borderWidth="0dp"
        app:layout_constraintBottom_toTopOf="@+id/fragmentHost"
        app:layout_constraintEnd_toStartOf="@+id/colourSecondarySelected"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/color_swap_icon"
        android:contentDescription="@string/content_description_color_swap_tool"/>

    <EditText
        android:id="@+id/titleTextView"
        style="@style/default_canvas_creation_edit_text_style_activity_canvas"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/colourPickerRecyclerView"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentHost"
        tools:listitem="@layout/colour_picker_layout" />

    <View
        android:id="@+id/colourSecondarySelected"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="24dp"
        android:background="@android:color/holo_blue_bright"
        app:layout_constraintBottom_toBottomOf="@+id/colourPrimarySelected"
        app:layout_constraintEnd_toStartOf="@+id/colourPrimarySelected"
        app:layout_constraintTop_toTopOf="@+id/colourPrimarySelected"
        app:layout_constraintVertical_bias="0.8" />

    <View
        android:id="@+id/colourPrimarySelected"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="32dp"
        android:background="@android:color/holo_blue_bright"
        app:layout_constraintBottom_toTopOf="@+id/fragmentHost"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/doneButton"
        app:layout_constraintEnd_toStartOf="@+id/doneButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/doneButton">

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scrollbars="none"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/mirrorButton"
                    style="@style/canvas_activity_button_tool_style"
                    app:srcCompat="@drawable/ic_mirror"
                    android:contentDescription="@string/content_description_mirror_tool"/>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/darkenButton"
                    style="@style/canvas_activity_button_tool_style"
                    app:srcCompat="@drawable/darken_icon"
                    android:contentDescription="@string/content_description_darken_tool"/>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/lightenButton"
                    style="@style/canvas_activity_button_tool_style"
                    app:srcCompat="@drawable/lighten_icon"
                    android:contentDescription="@string/content_description_lighten_tool"/>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/clearAllButton"
                    style="@style/canvas_activity_button_tool_style"
                    app:srcCompat="@drawable/ic_baseline_layers_clear_24"
                    android:contentDescription="@string/content_description_clear_canvas_tool"/>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/changeBackgroundButton"
                    style="@style/canvas_activity_button_tool_style"
                    app:srcCompat="@drawable/change_background_icon"
                    android:contentDescription="@string/content_description_change_background_tool"/>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/undoButton"
                    style="@style/canvas_activity_button_tool_style"
                    android:backgroundTint="@color/white"
                    app:srcCompat="@drawable/ic_baseline_undo_24"
                    android:contentDescription="Undo Tool"/>


                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/colorPickerButton"
                    style="@style/canvas_activity_button_tool_style"
                    app:srcCompat="@drawable/ic_baseline_colorize_24" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/findAndReplaceButton"
                    style="@style/canvas_activity_button_tool_style"
                    app:srcCompat="@drawable/ic_baseline_find_replace_24"
                    android:contentDescription="@string/content_description_find_and_replace_tool"/>
            </LinearLayout>
        </HorizontalScrollView>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>