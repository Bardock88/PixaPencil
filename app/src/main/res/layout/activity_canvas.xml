<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activityCanvas_rootLayout"
    tools:context=".activities.canvas.CanvasActivity">

    <FrameLayout
        android:id="@+id/activityCanvas_primaryFragmentHost"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/activityCanvas_colorPickerRecyclerView"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toStartOf="@+id/activityCanvas_colorSecondaryView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/activityCanvas_primaryFragmentHost"
        tools:listitem="@layout/color_picker_layout" />

    <View
        android:id="@+id/activityCanvas_colorSecondaryView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@android:color/holo_blue_bright"
        app:layout_constraintBottom_toBottomOf="@+id/activityCanvas_colorPickerRecyclerView"
        app:layout_constraintEnd_toStartOf="@+id/activityCanvas_colorPrimaryView"
        app:layout_constraintTop_toTopOf="@+id/activityCanvas_colorPickerRecyclerView"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/activityCanvas_colorPrimaryView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="16dp"
        android:background="@android:color/holo_blue_bright"
        app:layout_constraintBottom_toBottomOf="@+id/activityCanvas_colorSecondaryView"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/activityCanvas_colorSecondaryView" />



    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <HorizontalScrollView
            android:id="@+id/activityCanvas_canvasToolsScrollView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scrollbars="none"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/activityCanvas_pencilButton"
                    style="@style/canvas_activity_button_tool_style"
                    android:contentDescription="@string/content_description_pencil_tool"
                    app:srcCompat="@drawable/ic_baseline_pencil_24" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/activityCanvas_verticalMirrorButton"
                    style="@style/canvas_activity_button_tool_style"
                    android:contentDescription="@string/content_description_mirror_tool"
                    app:srcCompat="@drawable/ic_mirror" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/activityCanvas_horizontalMirrorButton"
                    style="@style/canvas_activity_button_tool_style"
                    android:contentDescription="@string/content_description_mirror_tool_2"
                    android:rotation="90"
                    app:srcCompat="@drawable/ic_mirror" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/activityCanvas_darkenButton"
                    style="@style/canvas_activity_button_tool_style"
                    android:contentDescription="@string/content_description_darken_tool"
                    app:srcCompat="@drawable/darken_icon" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/activityCanvas_lightenButton"
                    style="@style/canvas_activity_button_tool_style"
                    android:contentDescription="@string/content_description_lighten_tool"
                    app:srcCompat="@drawable/lighten_icon" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/activityCanvas_resetCanvasButton"
                    style="@style/canvas_activity_button_tool_style"
                    android:contentDescription="@string/content_description_clear_canvas_tool"
                    app:srcCompat="@drawable/ic_baseline_layers_clear_24" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/activityCanvas_changeBackgroundButton"
                    style="@style/canvas_activity_button_tool_style"
                    android:contentDescription="@string/content_description_change_background_tool"
                    app:srcCompat="@drawable/change_background_icon" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/activityCanvas_undoButton"
                    style="@style/canvas_activity_button_tool_style"
                    android:backgroundTint="@color/white"
                    android:contentDescription="@string/content_description_undo_tool"
                    app:srcCompat="@drawable/ic_baseline_undo_24" />


                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/activityCanvas_colorPickerButton"
                    style="@style/canvas_activity_button_tool_style"
                    android:contentDescription="@string/content_description_color_picker_tool"
                    app:srcCompat="@drawable/ic_baseline_colorize_24" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/activityCanvas_findAndReplaceButton"
                    style="@style/canvas_activity_button_tool_style"
                    android:contentDescription="@string/content_description_find_and_replace_tool"
                    app:srcCompat="@drawable/ic_baseline_find_replace_24" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/activityCanvas_eraseButton"
                    style="@style/canvas_activity_button_tool_style"
                    android:contentDescription="@string/content_description_eraser_tool"
                    app:srcCompat="@drawable/ic_eraser" />
            </LinearLayout>
        </HorizontalScrollView>
    </FrameLayout>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="10dp"
        android:elevation="50dp"
        app:strokeWidth="0dp"
        android:id="@+id/activityCanvas_canvasFragmentHostCardViewParent"
        app:cardBackgroundColor="@color/white"
        android:background="@drawable/border_drawable_frame"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view">
        <com.realtomjoney.pyxlmoose.customviews.SquareFrameLayout
            android:id="@+id/activityCanvas_canvasFragmentHost"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>