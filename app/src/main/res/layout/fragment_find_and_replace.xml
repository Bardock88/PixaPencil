<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.findandreplace.FindAndReplaceFragment"
    android:background="@color/white"
    android:id="@+id/findAndReplaceFragmentRootLayout">

    <TextView
        android:id="@+id/fragmentFindAndReplace_findTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="@string/fragmentFindAndReplace_find_str"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fragmentFindAndReplace_replaceWithTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:text="@string/fragmentFindAndReplace_replace_with_str"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentFindAndReplace_canvasColorsRecyclerView" />

    <TextView
        android:id="@+id/fragmentFindAndReplace_colorsInCanvasTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="@string/fragmentFindAndReplace_colors_in_your_canvas_str"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentFindAndReplace_findTextView" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragmentFindAndReplace_canvasColorsRecyclerView"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentFindAndReplace_colorsInCanvasTextView"
        tools:listitem="@layout/color_picker_layout" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragmentFindAndReplace_availableColorsRecyclerView"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentFindAndReplace_replaceWithTextView"
        tools:listitem="@layout/color_picker_layout" />

    <Button
        android:id="@+id/fragmentFindAndReplace_doneButton"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:text="@string/str_button_done"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/fragmentFindAndReplace_colorToFind"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/fragmentFindAndReplace_availableColorsRecyclerView" />

    <View
        android:id="@+id/fragmentFindAndReplace_colorToReplace"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/fragmentFindAndReplace_colorToFind"
        app:layout_constraintStart_toEndOf="@+id/fragmentFindAndReplace_colorToFind" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Color to Find"
        app:layout_constraintBottom_toTopOf="@+id/fragmentFindAndReplace_colorToFind"
        app:layout_constraintEnd_toEndOf="@+id/fragmentFindAndReplace_colorToFind"
        app:layout_constraintStart_toStartOf="@+id/fragmentFindAndReplace_colorToFind" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Color to Replace"
        app:layout_constraintBottom_toTopOf="@+id/fragmentFindAndReplace_colorToReplace"
        app:layout_constraintEnd_toEndOf="@+id/fragmentFindAndReplace_colorToReplace"
        app:layout_constraintStart_toStartOf="@+id/fragmentFindAndReplace_colorToReplace" />
</androidx.constraintlayout.widget.ConstraintLayout>